{ 
  "compilerOptions": {
    "rootDir": "./",
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".tsout",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "cypress/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/client",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
  