{
    "compilerOptions": {
      "lib": ["es2017"],
      "removeComments": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2017",
      "outDir": ".tsout",
      "experimentalDecorators": true,
      "module": "commonjs",
      "esModuleInterop": true
    },
    "include": [
      "./**/*.ts",
      "cypress/types.d.ts",
      "node_modules/cypress"
    ],
    "exclude": [
      "node_modules/**/*",
      "src/web",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
  }
  