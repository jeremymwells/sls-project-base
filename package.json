{
  "name": "projectbase",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:web:dev": "cd src/web && npm run buildAndExport:dev && cd -",
    "build:web:local": "cd src/web && npm run buildAndExport:local && cd -",
    "build:web:prd": "cd src/web && npm run buildAndExport:prd && cd -",
    "deploy:dev": "sls deploy --stg dev",
    "deploy:local": "sls deploy --stg local",
    "deploy:prd": "sls deploy --stage prd",
    "lint": "./node_modules/.bin/eslint --ext .js,.ts src",
    "lint:fix": "npm run lint -- --fix",
    "local:api": "SLS_DEBUG=* sls offline start --printOutput --httpPort 8080",
    "local:web": "STAGE=${STAGE:-'local'} cd src/web && npm run dev:local && cd -",
    "predeploy:local": "npm run build:web:local",
    "predeploy:dev": "npm run build:web:dev",
    "predeploy:prd": "npm run build:web:prd",
    "preinstall": "cd src/web && npm install && cd -",
    "prelint": "cd src/web && npm run lint && cd -",
    "prelint:fix": "cd src/web && npm run lint:fix && cd -",
    "start": "concurrently --kill-others \"npm run local:api\" \"npm run local:web\"",
    "test": "NODE_ENV=test mocha -r ts-node/register src/**/*.spec.ts --reporter markdown",
    "watch:build:web": "nodemon --config nodemon.build-web.json",
    "watch:build:local": "nodemon --config nodemon.build-web.json",
    "web:lambda": "concurrently --kill-others \"TUNNEL_PORT=8080 npm run localtunnel\" \"npm run api:offline\" \"npm run watch:build:local\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lodash.get": "^4.4.2",
    "lodash.template": "^4.5.0",
    "mongodb": "^3.6.3",
    "readdir": "^1.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/mocha": "^8.0.2",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^10.12.18",
    "@types/serverless": "^1.72.5",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "aws-sdk": "^2.1106.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "fullstack-serverless": "^0.8.0",
    "localtunnel": "^2.0.0",
    "mocha": "^8.1.1",
    "node-debug": "^0.1.0",
    "nodemon": "^2.0.6",
    "serverless": "^3.10.2",
    "serverless-domain-manager": "^5.1.0",
    "serverless-finch": "^4.0.0",
    "serverless-import-config-plugin": "^0.1.3",
    "serverless-offline": "^6.9.0",
    "serverless-plugin-typescript": "^2.1.1",
    "serverless-s3-sync": "^3.0.0",
    "serverless-webpack": "^5.3.3",
    "sinon": "^9.0.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.2.4",
    "webpack": "4.44.2",
    "webpack-node-externals": "^1.7.2"
  }
}
